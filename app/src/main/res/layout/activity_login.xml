<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_macaig"
    tools:context=".Login">

    <!-- detalles del textview Bienvenido -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/Bienvenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#F7819F"
                android:padding="10dp"
                android:text="Bienvenido a MACA Snacks"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/Seleccione"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="Seleccione los datos de su pedido"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/para_llevar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Para llevar"
                    android:textSize="15dp"

                    />

                <RadioButton
                    android:id="@+id/entrega_domicilio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Entrega Domicilio (Cercanias 2KM)"
                    android:textSize="15dp" />
            </RadioGroup>
        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/MENU"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#F7819F"
                    android:padding="10dp"
                    android:text="MENU"
                    android:textAlignment="center"
                    android:textColor="#1C1C1C"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/sopa"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/sopa_preparada"
                    app:srcCompat="@drawable/sopa_preparada"

                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox_sopa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sopa Preparada $60"
                        android:textSize="20dp" />


                </LinearLayout>

                <ImageView
                    android:id="@+id/chicharron"
                    android:src="@drawable/chicharrones_preparados"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/chicharrones_preparados" />

                <CheckBox
                    android:id="@+id/checkchicha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chicharrones Preparados $45"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/nachos"
                    android:src="@drawable/nachos_preparados"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/nachos_preparados"
                    />

                <CheckBox
                    android:id="@+id/precionachos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nachos Preparados $50"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/tostitos"
                    android:src="@drawable/tostitos_preparados"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/tostitos_preparados"
                    />

                <CheckBox
                    android:id="@+id/preciotostitos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tostitos Preparados $45"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/doritos"
                    android:src="@drawable/doritos_preparados"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/doritos_preparados"
                    />

                <CheckBox
                    android:id="@+id/preociodoritos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Doritos Preparados $45"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/cheetos"
                    android:src="@drawable/cheetos_preparados"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/cheetos_preparados"
                    />

                <CheckBox
                    android:id="@+id/preciocheetos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cheetos Flamming $45"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/mix"
                    android:src="@drawable/maca_mix"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/maca_mix"
                    />

                <CheckBox
                    android:id="@+id/preciomix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="MACA_MIX $82"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/esquite"
                    android:src="@drawable/esquite"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/esquite"
                    />

                <CheckBox
                    android:id="@+id/precioesquite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tu Esquite con Topping $50"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/agua"
                    android:src="@drawable/agua"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/agua"
                    />

                <CheckBox
                    android:id="@+id/precioagua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Agua $10"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/arizona"
                    android:src="@drawable/arizona"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/arizona"
                    />

                <CheckBox
                    android:id="@+id/precioarizona"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Arizona $23"
                    android:textSize="20dp"
                    />

                <ImageView
                    android:id="@+id/refrescos"
                    android:src="@drawable/refresco"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/refresco"
                    />

                <CheckBox
                    android:id="@+id/preciorefresco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Refrescos 600ml $20"
                    android:textSize="20dp"
                    />
                <ImageView
                    android:id="@+id/coca"
                    android:src="@drawable/coca_cola"
                    android:layout_width="200dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/coca_cola"
                    />

                <CheckBox
                    android:id="@+id/preciococa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Coca Cola 400ml $19"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/operacion"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:backgroundTint="#F7819F"
                        android:text="Calcular"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_gravity="center"
                        />

                    <Button
                        android:id="@+id/cancelar"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:textColor="#000000"
                        android:backgroundTint="#F7819F"
                        android:text="Cancelar"
                        android:textSize="20dp"
                        android:layout_gravity="center"
                        />



                </LinearLayout>

                <TextView
                    android:id="@+id/resultado"
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Resultado"
                    android:textSize="40dp"
                    />


            </LinearLayout>


        </ScrollView>

    </LinearLayout>


</LinearLayout>